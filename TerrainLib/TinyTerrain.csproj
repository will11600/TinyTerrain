<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Authors>willbldn</Authors>
    <Copyright>© William Brocklesby 2025</Copyright>
    <Description>C# library for efficient storage and streaming of terrain data. Optimized for compact storage and fast retrieval, making it ideal for games and applications with demanding terrain management needs.</Description>
    <PackageProjectUrl></PackageProjectUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/will11600/TinyTerrain</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageVersion>1.1.0</PackageVersion>
    <Title>Tiny Terrain</Title>
    <PackageReleaseNotes>Replace `IBiome&lt;T&gt;` interface with `Biome&lt;T&gt;` class across the codebase, updating method signatures, constructor parameters, and field types accordingly. Modify `BilinearSample` and `GetBilinearSamplesAroundPoint` methods in `Terrain.cs` to use the new class. Update `TinyTerrain.csproj` with additional project metadata and include `readme.md`. Adjust `TestBiome` in `TerrainTests.cs` to implement `Biome&lt;int&gt;`.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\readme.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
